NOM = Pichenot_Delifer
# NOM = correction

# FLAGS = -Wall -std=c99 -Wextra -pedantic -Werror
FLAGS = -Wall -std=c99 -Wextra -pedantic -Werror -Wno-unused-parameter


#----------------------------------------------------------------------


GCC = gcc $(FLAGS)

all: $(NOM)

$(NOM): $(NOM).o
	$(GCC) $(NOM).o -o $(NOM)

%.o: %.c tp1.h
	$(GCC) -c -o $@ $<

clean:
	rm -f $(NOM) *.o a.out
